{
  "pluginAlias": "NavienSmart",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "authMode": {
        "title": "Auth Mode",
        "type": "string",
        "default": "account",
        "oneOf": [
          {
            "title": "Navien Smart Account",
            "enum": [
              "account"
            ]
          },
          {
            "title": "Token",
            "enum": [
              "token"
            ]
          }
        ]
      },
      "username": {
        "title": "Username",
        "type": "string"
      },
      "password": {
        "title": "Password",
        "type": "string",
        "condition": {
          "functionBody": "return model.authMode === 'account';"
        }
      },
      "refreshToken": {
        "title": "Refresh Token",
        "type": "string",
        "condition": {
          "functionBody": "return model.authMode === 'token';"
        }
      },
      "accountSeq": {
        "title": "Account Seq",
        "type": "number",
        "condition": {
          "functionBody": "return model.authMode === 'token';"
        }
      }
    }
  }
}