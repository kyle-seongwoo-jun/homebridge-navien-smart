{
  "private": false,
  "displayName": "Navien Smart",
  "name": "homebridge-navien-smart",
  "version": "1.0.1",
  "description": "Homebridge plugin to control Navien devices via Navien Smart",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kyle-seongwoo-jun/homebridge-navien-smart.git"
  },
  "bugs": {
    "url": "https://github.com/kyle-seongwoo-jun/homebridge-navien-smart/issues"
  },
  "engines": {
    "node": "^18.17.0 || ^20.9.0",
    "homebridge": "^1.6.0"
  },
  "main": "dist/index.js",
  "bin": {
    "navien": "./bin/navien"
  },
  "scripts": {
    "lint": "eslint src/**/*.ts --max-warnings=0 --fix",
    "watch": "npm run build && npm link && nodemon",
    "build": "rimraf ./dist && tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "prepublishOnly": "npm run lint && npm run build",
    "prepare": "husky",
    "commitlint": "commitlint --edit"
  },
  "keywords": [
    "homebridge-plugin"
  ],
  "dependencies": {
    "@aws-amplify/pubsub": "^6.0.12",
    "aws-amplify": "^6.0.12",
    "fetch-cookie": "^2.1.0",
    "node-fetch": "^2.7.0",
    "node-persist": "^4.0.1",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.9.0",
    "@types/node-fetch": "^2.6.10",
    "@types/node-persist": "^3.1.8",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.45.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "homebridge": "^1.6.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "nodemon": "^2.0.22",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
