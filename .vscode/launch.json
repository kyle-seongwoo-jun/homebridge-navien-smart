{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "Debug Homebridge",
      "program": "${workspaceFolder}/node_modules/.bin/homebridge",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "internalConsoleOptions": "neverOpen",
      "args": ["-I", "-D"],
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch CLI",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/dist/cli/index.js",
      "args": [
        "<username>",
        "<password>",
      ],
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    }
  ]
}
